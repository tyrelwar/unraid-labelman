<?xml version='1.0' standalone='yes'?>
<!DOCTYPE PLUGIN>

<PLUGIN 
  name="labelman"
  author="Derek Kaser"
  version="0.0.1"
  pluginURL="https://github.com/tyrelwar/unraid-labelman/raw/main/plugin/labelman.plg"
  support="https://forums.unraid.net/topic/184701-plugin-label-manager/"
  min="6.12.0"
  icon="fa-tags"
>

<CHANGES>
<![CDATA[
###0.0.1###
- Improved interface
- Added plugin diagnostics configuration
- Improved framework for adding new services
- Added support for Swag containers

For older releases, see https://github.com/tyrelwar/unraid-labelman/releases
]]>
</CHANGES>

<FILE Name="/boot/config/plugins/labelman/unraid-labelman-latest-noarch-1.txz">
<URL>https://github.com/tyrelwar/unraid-labelman/releases/download/latest/unraid-labelman-latest-noarch-1.txz</URL>
</FILE>

<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/labelman/unraid-labelman-latest-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/labelman/unraid-labelman-*.txz 2>/dev/null | grep -v 'latest')

echo ""
echo "----------------------------------------------------"
echo " labelman has been installed."
echo " Version: 0.0.1"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-labelman

rm -rf /usr/local/emhttp/plugins/labelman
rm -rf /boot/config/plugins/labelman
]]>
</INLINE>
</FILE>

</PLUGIN>