<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/labelman/unraid-labelman-1.0.1-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/labelman/unraid-labelman-*.txz 2>/dev/null | grep -v '1.0.1')

echo ""
echo "----------------------------------------------------"
echo " labelman has been installed."
echo " Version: 1.0.1"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-labelman

rm -rf /usr/local/emhttp/plugins/labelman
rm -rf /boot/config/plugins/labelman
]]>
</INLINE>
</FILE>

